<main>
    <form class="theater-form" method="POST">
        <h1>Create Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" id="title" name="title" placeholder="Theater name" value="{{title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea id="description" name="description" placeholder="Description">{{description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" id="imageUrl" name="imageUrl" placeholder="Image Url" value="{{imageUrl}}">
        </div>
        <div class="check">
            <input type="checkbox" name="isPublic" id="check-box">
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>